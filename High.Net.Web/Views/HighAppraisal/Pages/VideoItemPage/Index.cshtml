@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using High.Net.Core
@using High.Net.Models.HighAppraisal.Pages

@model PageViewModel<VideoItemPage>
@Html.Partial("~/Views/HighAppraisal/Shared/Banner.cshtml")
<div class="container">
    <div class="row">
         <div class="col-md=12 col-sm-12">
        <div class="video-inner-content">
            <h2 class="black">@Html.PropertyFor(x => x.CurrentPage.Heading)</h2>
            <hr class="blue-border" />
            <div class="video-frame">
                <iframe width="600" height="345" src="@Url.ContentUrl(Model.CurrentPage.VideoLink)"></iframe>
            </div>
            <a href="#" class="btn cmt-share btn-lg">
                <span class="glyphicon glyphicon-comment"></span>Comments
            </a>

            <a href="#" class="btn cmt-share btn-lg">
                <span class="glyphicon glyphicon-share"></span>Share
            </a>
        </div>
        <div class="spacer"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="video-innerpara">
                    @Html.PropertyFor(x => x.CurrentPage.VideoDetails)
                </div>
            </div>
        </div>
             </div>
    </div>
</div>
