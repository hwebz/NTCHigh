@using EPiServer.Core
@using High.Net.Models.Shared.Pages
@model High.Net.Core.PageViewModel<NewsItemPage>
@Html.Partial("~/Views/StructureCareUs/Shared/Banner.cshtml", Model)
<!-- content Starts-->
<div class="container">
    <div class="news">
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <h2 class="icon-header">@Html.PropertyFor(m => m.CurrentPage.Title)</h2>
                @Html.PropertyFor(m => m.CurrentPage.NewsContent)
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="news-right-img">
                    <div class="cal">
                        @if (Model.CurrentPage.NewsImage != null)
                        {
                            @Html.PropertyFor(m => m.CurrentPage.NewsImage, new { CssClass = "img-responsive" })
                        }
                        else
                        {
                            <img src="~/Static/global/images/news-placeholder-360X200.png" class="img-responsive placeholder" />
                        }
                    </div>
                    <div class="date">
                        <span class="glyphicon glyphicon-calendar news">
                            <span class="date-text">@Model.CurrentPage.PostedDate.ToString("MMMM dd, yyyy")</span>
                        </span>
                    </div>
                </div>
                <p class="text-center">@Model.CurrentPage.ImageQuote</p>
            </div>
        </div>
    </div>
</div>
<!-- content Ends-->
<div class="spacer"></div>