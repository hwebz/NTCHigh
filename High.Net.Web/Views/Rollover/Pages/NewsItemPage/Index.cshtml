@using EPiServer.Core
@using High.Net.Models.Shared.Pages
@model High.Net.Core.PageViewModel<NewsItemPage>
@section SiteHeader{
    <style>
        .date-text {
            font-family: "Open Sans",sans-serif;
            font-size: 12px;
            letter-spacing: 0 !important;
        }
    </style>
}
<div class="spacer"></div>
<div class="container">
    <div class="news">
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <h2>@Html.PropertyFor(m => m.CurrentPage.Title)</h2>
                @Html.PropertyFor(m => m.CurrentPage.NewsContent)
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="news-right-img">
                    <div class="cal">
                        @Html.PropertyFor(m => m.CurrentPage.NewsImage, new { CssClass = "img-responsive" })
                        <div class="date">
                            <span class="glyphicon glyphicon-calendar news"><span class="date-text"> @Model.CurrentPage.PostedDate.ToString("MMMM dd, yyyy")</span></span>
                        </div>
                    </div>
                </div>
                <p class="text-center">@Model.CurrentPage.ImageQuote</p>
            </div>
        </div>
    </div>
</div>
<div class="spacer"></div>