@using High.Net.Core

@{
    Layout = "~/Views/Shared/Layouts/_root.cshtml";
}

@model IPageViewModel<BasePageData>
@{
    var contentloader = EPiServer.ServiceLocation.ServiceLocator.Current.GetInstance<EPiServer.IContentLoader>();
    var homePage = contentloader.Get<High.Net.Models.HighConcrete.Pages.HomePage>(EPiServer.Web.SiteDefinition.Current.StartPage);
}
@section Header
{
    <link type="image/ico" href="~/Static/global/favicon/favicon.ico" rel="icon">
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:400,300'>

    @Styles.Render("~/bundles/bootstrap-css")
    @Styles.Render("~/bundles/browserBlast-css")
    @Styles.Render("~/bundles/owl-carousel")
    @Styles.Render("~/bundles/global-css")
    @Styles.Render("~/bundles/highconcrete-css")
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '@homePage.GoogleAnalytics']);
        _gaq.push(['_trackPageview']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("SiteHeader", required: false)
}
@Html.Partial("~/Views/HighConcrete/Shared/Header.cshtml", Model)
<div class="container">
    @Html.Partial("~/Views/HighConcrete/Shared/Navigation.cshtml", Model)
    @RenderBody()
</div>
@Html.Partial("~/Views/HighConcrete/Shared/Footer.cshtml", Model)


@section Footer
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery.unobtrusive-ajax")
   <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery-validate")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/browserBlast-js")
    @Scripts.Render("~/bundles/easing")
    @Scripts.Render("~/bundles/fitvids")
    @Scripts.Render("~/bundles/bxslider")
    @Scripts.Render("~/bundles/global-js")
    @RenderSection("SiteFooter", required: false)
    @Scripts.Render("~/bundles/highconcrete-js")

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.4";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script>
        !function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");
    </script>

    <script type="text/javascript" src="//www.leadmanagerfx.com/public/js/lmfx.min.js"></script>
    <script type="text/javascript" src="//www.leadmanagerfx.com/public/js/ctfx.min.js"></script>
    <script>
    window.FxOptions = {};

    window.FxOptions.id = [118];

    window.FxOptions.setupInput = true;

    window.FxOptions.formMapping = {};

    window.FxOptions.formMapping['[contactforms]'] = '[Contact]';

    window.FxOptions.formMapping['[GetQuoteForm]'] = '[GetQuote]';

    window.FxOptions.formMapping['[newsletter]'] = '[Newsletter]';

</script>


}



