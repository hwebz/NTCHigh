@using High.Net.Core
@using EPiServer.Web

@model IPageViewModel<BasePageData>

<div class="menu">
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar">
                    <ul class="nav navbar-nav">
                        <li><a class="@(Model.CurrentPage.ContentLink.CompareToIgnoreWorkID(SiteDefinition.Current.StartPage) ? "active" : null)" href="@Url.ContentUrl(SiteDefinition.Current.StartPage)">Home</a></li>
                                      @Html.MenuList(SiteDefinition.Current.StartPage,
                                        @<li>
                                            @Html.PageLink(item.Page, null, new { @class = item.Selected ? "active" : null })
                                        </li>)
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->
        </nav>
    </div>
</div>
