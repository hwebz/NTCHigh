@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using High.Net.Models.Shared.ViewModels
@using High.Net.Core

@model ContactUsPageModel


@Html.Partial("~/Views/GreenfieldArchitects/Shared/Banner.cshtml", Model.CurrentPage.BannerImage != null ? Model.CurrentPage.BannerImage : new ImageVault.EPiServer.MediaReference())


<div class="container">
<div class="black-band">
    <div class="container">
        <h1>@Model.CurrentPage.Name</h1>
    </div>
</div>


    <div class="common-container">
        <div class="about">
            @if (Model.ContactUsForm.IsContactSubmitted)
            {
               @(new HtmlString(Model.ContactUsForm.ThankYouMessageText))
            }
            @Html.PropertyFor(x => x.CurrentPage.ContentArea, new { CssClass = "row", tag = Global.ContentAreaTags.FullWidth, Tags = new[] { Global.ContentAreaTags.FullWidth, Global.ContentAreaTags.TwoThirdsWidth, Global.ContentAreaTags.HalfWidth, Global.ContentAreaTags.OneThirdWidth } })
        </div>
    </div>
</div>
