@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using High.Net.Models.Residential.Blocks

@model GalleryBlock
<!--Photo Gallery Start -->
@{
    var contentLoader = EPiServer.ServiceLocation.ServiceLocator.Current.GetInstance<EPiServer.IContentLoader>();
}

<!--Photo Gallery Start -->
<div class="img-gallery-slider border-block" data-pager="pager-@(((IContent)Model).ContentLink.ID)">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
            <div class="video-slider-wrapper">
                <ul class="bxslider-img-gallery">
                    @if (Model.ImageSliders != null && Model.ImageSliders.Any())
                    {
                        foreach (var item in Model.ImageSliders)
                        {
                            <li>
                                @Html.PropertyFor(x => item, new { PropertySettings = new ImageVault.EPiServer.PropertyMediaSettings { Width = 602, Height = 447 , ResizeMode = ImageVault.Common.Data.ResizeMode.ScaleToFill } , CssClass="img-responsive" })
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
            <div class="pager-container">
                <div class="row gallery-pager pager-@(((IContent)Model).ContentLink.ID)">
                    @if (Model.ImageSliders != null && Model.ImageSliders.Any())
                    {
                        int i = 0;
                        foreach (var item in Model.ImageSliders)
                        {
                            <a data-slide-index="@i" href="" class="col-xs-4 col-sm-12">
                                @Html.PropertyFor(x => item, new { PropertySettings = new ImageVault.EPiServer.PropertyMediaSettings { Width = 96, Height = 104 , ResizeMode = ImageVault.Common.Data.ResizeMode.ScaleToFill }, CssClass = "thumb" })
                            </a>
                            i++;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--Photo Gallery End -->
