@using High.Net.Core

@{
    Layout = "~/Views/Shared/Layouts/_root.cshtml";
}

@model IPageViewModel<BasePageData>
@{
    var contentloader = EPiServer.ServiceLocation.ServiceLocator.Current.GetInstance<EPiServer.IContentLoader>();
    var homePage = contentloader.Get<High.Net.Models.HighConcreteAccessories.Pages.HomePage>(EPiServer.Web.SiteDefinition.Current.StartPage);
}
@section Header
{
    <link type="image/ico" href="~/Static/global/favicon/favicon.ico" rel="icon">
     @Styles.Render("~/bundles/bootstrap-css")
     @Styles.Render("~/bundles/global-css")
     @Styles.Render("~/bundles/high-concrete-assoccesories-css")
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '@homePage.GoogleAnalytics']);
        _gaq.push(['_trackPageview']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
    
    @RenderSection("SiteHeader", required: false)
}
<div class="wrapper">
    @Html.Partial("~/Views/HighConcreteAccessories/Shared/Header.cshtml", Model)
    @Html.Partial("~/Views/HighConcreteAccessories/Shared/Banner.cshtml", Model)
    @RenderBody()
    @Html.Partial("~/Views/HighConcreteAccessories/Shared/Footer.cshtml", Model)
</div>
@Html.Partial("~/Views/HighConcreteAccessories/Shared/CartWidget.cshtml")
@section Footer
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-js")
    @Scripts.Render("~/bundles/jcarousel")
    @Scripts.Render("~/bundles/high-concrete-assoccesories-js")
    @RenderSection("SiteFooter", required: false)
}



